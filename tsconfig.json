{
  "compileOnSave": false,
  "buildOnSave": false,
  "compilerOptions": {
    "module": "es2015",
    "moduleResolution": "node",
    "target": "es6",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "noImplicitAny": false,
    "removeComments": false,
    "sourceMap": false,
    "inlineSourceMap": true,
    "jsx": "react"
  },
  "exclude": [
    "coverage",
    "dist",
    "lib",
    "node_modules"
  ]
}
